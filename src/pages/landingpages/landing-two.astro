      </div>
      {
        navigationData.map((section, index) => (
          <div>
            <p class="mt-16 text-2xl lg:text-4xl text-black">
              {section.sectionTitle}
            </p>
            <div class="gap-12 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
              {section.categories.map((category, catIndex) => (
                <div class="mt-10 text-sm">
                  <div class="flex flex-col justify-start text-base text-gray-500">
                    <p class="text-black font-medium lg:text-xl text-lg">
                      {category.title}
                    </p>
                    {category.links.map((link, linkIndex) => (
                      <a
                        class="hover:text-regent-600 mt-2"
                        title={link.label}
                        aria-label={link.label}
                        href={link.href}
                      >
                        {link.label}
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
      <div>
        <p class="mt-16 text-2xl lg:text-4xl text-black">Widgets</p>
        <div class="gap-12 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
